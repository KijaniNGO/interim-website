@import vars

html, body {
    background: white
    font-family: Merriweather
    font-size: 14px
    max-width: 100%
    overflow-x: hidden
    margin: 0
    padding: 0
}

img {
    width: 100%
    vertical-align: top
}

a {
    color: inherit
    text-decoration: none
}

.button {
    display: inline-block
    background: green2
    color: white
    width: 5rem
}

main, header, footer, section {
    margin: 0
    width: 100%
}

header {
    background: green2
    position: relative
    .logo {
        position: absolute
        top: 1rem
        left: 1rem
        width: 25vw
    }
    .hero {
        width: 100%
    }
}

.intro {
    background: green2
    color: white
}
