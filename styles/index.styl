@import vars

html, body {
    background: white
    font-family: Merriweather
    font-size: 16px
    max-width: 100%
    overflow-x: hidden
    margin: 0
    padding: 0
    @media(max-width: 600px) {
        font-size: 14px
    }
    @media(max-width: 420px) {
        font-size: 12px
    }
}

* {
    box-sizing: border-box
}

img {
    width: 100%
    vertical-align: top
}

a {
    color: inherit
    text-decoration: none
}

.button {
    display: inline-block
    background: green2
    color: white
    width: 12.5rem
    text-align: center
    font-family: bree
    font-size: 1.7rem
    font-weight: bold
    border-radius: 1rem
    padding: 0.5rem 1rem 0.25rem 1rem
    margin: 0.75rem 1rem
    transition: all 0.5s
    &:hover {
        transform: scale(1.05)
        background: green
        box-shadow: 1px 1px 0.5rem 0.1rem rgba(green, 0.65)
    }
    .icon {
        width: 2.25rem
        padding-right: 0.5rem
        padding-top: 0.15rem
    }
    @media(max-width: 355px) {
        width: 11rem
        font-size: 1.25rem
        .icon { width: 1.75rem }
    }
}

h1, h2 {
    font-family: bree
    font-weight: bold
    font-size: 2rem
    margin: 0
    margin-bottom: 2rem
}

p {
    margin: 0
    margin-bottom: 1rem
}

main, header, footer, section {
    margin: 0
    width: 100%
}

header, footer, section {
    .container {
        max-width: 55rem
        margin: 0 auto
    }
}

header {
    background: green2
    position: relative
    box-shadow: 0 0.25rem 0.5rem rgba(green, 0.65)
    max-height: 40rem
    overflow: hidden
    color: white
    .logo {
        position: absolute
        top: 10%
        left: 5%
        width: 20%
    }
    .slogan {
        position: absolute
        bottom: 0
        width: 100%
        line-height: 1.5em
        margin: 0
        text-align: center
        font-size: 4.5rem
        font-weight: normal
        text-shadow: 0 0 2rem rgba(black, 0.5)
    }
    .hero {
        width: 100%
    }
    @media(max-width: 750px) {
        .slogan { font-size: 4rem }
    }
    @media(max-width: 550px) {
        .slogan { font-size: 3.5rem }
    }
    @media(max-width: 450px) {
        .slogan { font-size: 3rem }
    }
}

section.intro {
    background: green2
    color: white
    text-align: center
    padding: 2rem
    box-shadow: 0 0.25rem 0.5rem rgba(green, 0.35)
    h1 {
        font-size: 3rem
    }
    p {
        font-size: 1.5rem
        font-weight: bold
    }
    .button {
        font-size: 2rem
        background: white
        color: green2
        width: auto
        padding: 0.75rem 1.5rem 0.5rem 1.5rem
        margin-bottom: 2rem
        &:hover {
            background: white
            box-shadow: 1px 1px 1rem 0.5rem rgba(green, 0.65)
        }
    }
    @media(max-width: 750px) {
        h1 { font-size: 2rem }
        p { font-size: 1.15rem }
        .button { font-size: 1.5rem }
    }
    @media(max-width: 450px) {
        padding: 1.5rem 1rem
        h1 {
            font-size: 1.7rem
            margin-bottom: 1rem
        }
        p { font-size: 1rem }
        .button { font-size: 1.25rem }
    }
}

section.areas {
    padding: 0 2rem 3rem 2rem
    text-align: center
    .area {
        display: inline-block
        width: 16.5rem
        margin-right: 2rem
        &:last-child {
            margin-right: 0
        }
        .pictogram {
            width: 70%
            max-width: 12rem
            margin: 0 auto
            position: relative
            height: 10rem
            img {
                margin: auto auto 0
                position: absolute;
                top: 0
                left: 0
                bottom: 0
                right: 0
            }
        }
        h2 {
            color: green2
            margin: 1rem 0 0.5rem 0
        }
        p {
            margin: 0 auto
            max-width: 40rem
        }
    }
    @media(max-width: 930px) {
        .area {
            width: 100%
        }
    }
}

section.map {
    border-top: 0.3rem solid green2
    border-bottom: 0.3rem solid green2
    @media(max-width: 900px) {
        height: 19.5rem
        .map-container {
            width: 200%
            margin-left: -63%
        }
        img {
            display: block
            height: 19rem
            width: auto
            margin: 0 auto
        }
    }
    @media(max-width: 600px) {
        height: 17rem
        img { height: 16.5rem }
    }
    @media(max-width: 400px) {
        height: 15.5rem
        img { height: 15rem }
    }
}

section.engage {
    padding: 4rem 0
    text-align: center
    h1 {
        font-size: 2.5rem
        color: midgray
        margin-bottom: 1rem
    }
    @media(max-width: 1040px) {
        padding: 2rem 0
        max-width: 40rem
        margin: 0 auto
    }
}

footer {
    padding: 2rem
    background: midgray
    color: white
    font-size: 0.8rem
    text-align: center
    ul.links {
        list-style-type: none
        margin-bottom: 2rem
        line-height: 2rem
        li {
            display: inline-block
            margin-right: 1rem
            &::after {
                content: '|'
                margin-left: 1rem
            }
            &:last-child::after {
                content: ''
                margin-left: 0
            }
        }
        a {
            padding: 0.1rem 0.25rem 0rem 0.25rem
            border-top: 1px solid midgray
            border-bottom: 1px solid midgray
            &.active {
                border-color: white
            }
            &:hover {
                color: green
                border-color: green
            }
        }
    }
    p {
        margin: 0
    }
    .legal {
        margin-bottom: 1.5rem
    }
    a {
        transition: all 0.5s
        &:hover {
            color: green
        }
    }
    @media(max-width: 370px) {
        padding: 1rem
        font-size: 0.7rem
    }
}

#donate {
    header {
        box-shadow: none
    }
    section {
        max-width: 40rem
        margin: 0 auto
        padding: 2rem
        text-align: center
    }
    @media(max-width: 475px) {
        section.form { padding: 2rem 1rem }
    }
    @media(max-width: 420px) {
        section.form {
            padding: 0
            margin-bottom: -0.5rem
        }
    }
}
